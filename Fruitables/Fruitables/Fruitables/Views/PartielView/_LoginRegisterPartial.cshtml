@model FruitablesDAL.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/css/SignUpAndLoginStyle.css" />
</head>

<body>

<div class="main">
    <input type="checkbox" id="chk" aria-hidden="true">
    <div class="signup">
        <form asp-action="Register" asp-controller="Account" method="post" id="registerForm">
            <label asp-for="UserName" for="chk" aria-hidden="true">Sign Up</label>
            <input asp-for="UserName" placeholder="User name" required="required" />
            <input asp-for="Email" placeholder="Email" required="required" />
            <input asp-for="Password" placeholder="Password" required="required" />
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <div class="login">
        <form asp-action="Login" asp-controller="Account" method="post" id="loginForm">
            <label asp-for="Email" for="chk" aria-hidden="true">Login</label>
            <input asp-for="Email" placeholder="Email" required="required" />
            <input asp-for="Password" placeholder="Password" required="required" />
            <button type="submit">Login</button>
        </form>
    </div>
</div>


</body>

</html>