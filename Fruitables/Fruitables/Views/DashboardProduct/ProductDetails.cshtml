@model FruitablesBL.ViewModels.ManageProductVM
<input type="hidden" asp-for="ProductId" />


 @{
    Layout = null;
    
}

 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tyre Mountain Cycle 21</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" rel="stylesheet">
@*     <link href="css/ProductCard.css" rel="stylesheet"> *@
    <style>
        
body {
    background: #84c40c;
    font-family: Arial, Helvetica, sans-serif;
}

.container {
    background: #fff !important;
    border: none;
    border-radius: none;
    max-width: 1000px; /* Adjust this value as needed */
    margin: auto; /* Center the container */
    padding: 0 30px; /* Add some padding to the sides */
}

.abc {
    padding-left: 40px;
}

.pqr {
    padding-right: 70px;
    padding-top: 14px;
}

.para {
    float: right;
    margin-right: 0;
    padding-left: 80%;
    top: 0;
}

.fa-star {
    color: yellow;
}

li {
    list-style: none;
    line-height: 50px;
    color: #000;
}

.col-md-2 {
    padding-bottom: 20px;
    font-weight: bold;
}

    .col-md-2 a {
        text-decoration: none;
        color: #000;
    }

    .col-md-2.mio {
        font-size: 12px;
        padding-top: 7px;
    }

.des::after {
    content: '.';
    font-size: 0;
    display: block;
    border-radius: 20px;
    height: 6px;
    width: 55%;
    background: yellow;
    margin: 14px 0;
}

.r4 {
    padding-left: 25px;
}

.btn-outline-warning {
    border-radius: 0;
    border: 2px solid yellow;
    color: #000;
    font-size: 12px;
    font-weight: bold;
    width: 70%;
}

media screen and (max-width: 620px) {
    .container

{
    width: 98%;
    display: flex;
    flex-flow: column;
    text-align: center;
}

.des::after {
    content: '.';
    font-size: 0;
    display: block;
    border-radius: 20px;
    height: 6px;
    width: 35%;
    background: yellow;
    margin: 10px auto;
}

.pqr {
    text-align: center;
    margin: 0 30px;
}

.para {
    text-align: center;
    padding-left: 90px;
    padding-top: 10px;
}

.klo {
    display: flex;
    text-align: center;
    margin: 0 auto;
    margin-right: 40px;
}

}


    </style>
    <script src="../js/product.js"></script>
</head>
<body>
<input type="hidden" asp-for="ProductId" />
<div class="container py-4 my-4 mx-auto d-flex flex-column">
    <div class="header">
        <div class="row r1">
            <div class="col-md-9 abc">
                <h1>@Model.Name</h1>
            </div>
        <div class="col-md-3 text-right pqr">
       @{
            var rate = Model.Rate;
            for (var i = 1; i <= 5; i++)
            {
               <i class="fa fa-star@(i <= rate ? "" : "-o")"></i>
             }
        }
</div>

 <p class="text-right para">Based on 250 Review</p>
        </div>
    </div>
    <div class="container-body mt-4">
        <div class="row r3">
            <div class="col-md-5 p-0 klo">

                <ul class="list-unstyled">
                <li class="d-inline-block mr-3"><span class="font-weight-bold">Description:</span><br/> @Model.Description</li>
                <li class="d-inline-block mr-3"><span class="font-weight-bold">Stock:</span> @Model.Stock</li>
                <br/>
                <li class="d-inline-block mr-3"><span class="font-weight-bold">Price:</span> @Model.Price</li>
                <br/>
                <li class="d-inline-block mr-3"><span class="font-weight-bold">CostPrice:</span> @Model.CostPrice</li>
                  <br/>
                <li class="d-inline-block mr-3"><span class="font-weight-bold">CategoryName:</span> @Model.CategoryName</li>
           
            </ul>

            </div>
            <div class="col-md-7"> <img src="@Model.Image" width="65%" height="90%"> </div>
        </div>
    </div>
    <div class="footer d-flex flex-column mt-5">
        <div class="row r6">
            <div class="col-md-2 myt des"><a href="#">Review</a></div>
            


        </div>
</div>

    <script src="../js/product.js"></script>
<!-- jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>


</body>
</html>
