                    <p class="m-0 pb-3">@Model.Date.ToString("HH:mm:ss")</p>
                            <div class="d-flex pe-5">
                                @{
                            int iterator = (int)Math.Round(Model.Rate, MidpointRounding.AwayFromZero);
                                    for (int i = 0; i < iterator; i++)
                                    {
                                        <i class="fas fa-star text-primary"></i>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>


