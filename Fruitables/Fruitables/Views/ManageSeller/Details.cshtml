@model FruitablesBL.ViewModels.ManageSellerVM
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
@{
    // Layout = "~/Views/Dashboard/_DashBoard.cshtml";
    Layout = null;
    ViewBag.Breadcrumb = "Details";
}



<div class="container">
    <div class="col-md-12 mb-12">
        <img class="card-img-top" src="~/img/Shops/@Model.Logo" alt="Card image">
        <div class="card-body">
            <h4 class="card-title">
                @Model.CommercialName

                <div class="col-md-3 text-right pqr">
                    @{
                        var rate = Model.Rate;
                        for (var i = 1; i <= 5; i++)
                        {
                            <i class="fa fa-star@(i <= rate ? "" : "-o")"></i>
                        }
                    }
                </div>
            </h4>

            <h6 class="card-subtitle mb-2 text-muted">@Model.SellerName</h6>

            <p class="card-text">@Model.Address</p>
        </div>
    </div>

    <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="card col-3">
                <img src="@product.Image" alt="ProImg" style="width:100%">
                <div class="product-details">
                    <h5>@product.Name</h5>
                    <p>@product.Description</p>
                    <p>Rate: @product.Rate</p>
                    <p>Price: $@product.Price</p>
                    <p>Category: @product.Category</p>
                    <p>Feedbacks: @string.Join(", ", product.FeedBacks)</p>
                    <p>Offers: @string.Join(", ", product.Offers)</p>
                    <hr />
                </div>
@*                 <a asp-controller="Product" asp-action="ProductDetails" asp-route-productid="@product.ProductId" class="btn btn-outline-warning">Details</a>
 *@           
        </div>
    
            }
    </div>

    
</div>

<style>
    .pqr {
        text-align: center;
        margin: 0 30px;
        padding-right: 80px;
        padding-top: 14px;
        display: inline-flex;
    }

    .fa-star {
        color: yellow;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card a {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .a:hover {
        opacity: 0.7;
    }
</style>
