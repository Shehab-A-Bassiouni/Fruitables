@{
    Layout = null;
}



@model List<bestSellersRec>

<div class="card">
    <div class="card-header pb-0">
        <div class="row">
            <div class="col-lg-6 col-7">
                <h6>Best Sellers </h6>
                <p class="text-sm mb-0">
                    <i class="fa fa-check text-info" aria-hidden="true"></i>
                    <span class="font-weight-bold ms-1">This Year</span>
                </p>
            </div>
            
        </div>
    </div>
    <div class="card-body px-0 pb-2">
        <div class="table-responsive">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder " style="font-size:16px">Number </th>

                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder " style="font-size:16px">Selelr Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2" style="font-size:16px">Total Salas </th>
                    </tr>
                </thead>
                <tbody>
                    @for(var i = 0; i<Model.Count; i++)
                    {
                   
                        <tr>
                            <td class="align-middle text-center text-sm">
                                <span class="text-xs font-weight-bold">@(i + 1) </span>
                            </td>
                            <td>
                                <div class="d-flex px-2 py-1">
                                    
                                    <div class="d-flex flex-column justify-content-center">
                                        <h6 class="mb-0 text-sm">@Model[i].Commercialname</h6>
                                    </div>
                                </div>
                            </td>
                            
                            <td class="align-middle text-center text-sm">
                                <span class="text-xs font-weight-bold">@Model[i].totalSales </span>
                            </td>
                           
                        </tr>
                    }
                   

                </tbody>
            </table>
        </div>
    </div>
</div>
