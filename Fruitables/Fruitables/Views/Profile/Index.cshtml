@model FruitablesBL.ViewModels.ProfileVM


<!DOCTYPE html>
<html lang="en">

<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/ProfileStyle.css" />
</head>

<body>
    <section class="vh-100" >
        
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0 divParent">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="@Model.Image" alt="Avatar" class="rounded-circle mt-5" width="150px" />
                                <input type="hidden" name="UserName" value="@Model.UserName">
                                <h5>@Model.UserName</h5>

                                <a asp-action="Edit" asp-controller="Profile" class="fas fa-user-edit btn btn-dark"></a>
                               
                                <a asp-action="Index" asp-controller="Home" class="btn btn-success & fa fa-home"></a>
                                
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>First Name</h6>
                                            <p class="text-muted">@Model.FirstName</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Last Name</h6>
                                            <p class="text-muted">@Model.LastName</p>
                                        </div>
                                    </div>
                                    <h6>Connection Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Model.Email</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted">@Model.PhoneNumber</p>
                                        </div>
                                    </div>
                                   
                                    @if (Model.Customer != null && Model.Customer.CustomerId == Model.UserId)
                                    {
                                        <h6>Customer Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Address</h6>
                                                <p class="text-muted">@Model.Customer.Address</p>
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Seller != null && Model.Seller.SellerId == Model.UserId)
                                    {
                                        <h6>Seller Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Commercial Name</h6>
                                                <p class="text-muted">@Model.Seller.CommercialName</p>
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Admin != null && Model.Admin.AdminId == Model.UserId)
                                    {
                                        <h6>Admin Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Authority Level ID</h6>
                                                <p class="text-muted">@Model.Admin.AuthorityLevelId</p>
                                            </div>
                                        </div>
                                    }

                           
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>

