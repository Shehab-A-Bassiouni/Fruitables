@model IEnumerable<FruitablesBL.ViewModels.CategoryVM>

@{
    Layout = null;
    ViewData["Title"] = "Categories";
}

<link rel="stylesheet" href="CategoryCard.css">
<div class="container mt-4 mb-4">
    <div class="row justify-content-end">
        <div class="col-md-4">
            <div class="text-end">
                <a id="CreateButton" class="btn btn-success">Create Category</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var category in Model)
    {
        @if (category.IsActive == true)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <!-- Assuming you have an image property for categories -->

                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center">@category.Name</h5>
                        <!-- Add more details about the category if needed -->
                    </div>
                    <div class="card-footer d-flex justify-content-center">

                        <a class="btn btn-outline-success me-2 edit-button" data-category-id="@category.CategoryId">Edit</a>


                        <a class="btn btn-outline-success me-2 delete-button" data-category-id="@category.CategoryId">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<script src="../js/category.js"></script>
